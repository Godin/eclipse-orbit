<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.orbit.bundles</groupId>
    <artifactId>orbit-bundles-p2-repository-simrel</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>orbit-bundles-p2-repository-simrel-gmf-runtime</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <!-- dependency of gmf-runtime https://github.com/eclipse/gmf-runtime/issues/4 -->
  <name>Eclipse Orbit :: P2 Repository (SimRel Content for gmf-runtime)</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho.extras</groupId>
        <artifactId>tycho-p2-extras-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <destination>${project.build.directory}/repository</destination>
          <includeOptional>true</includeOptional>
          <includeNonGreedy>true</includeNonGreedy>
          <compress>true</compress>
          <append>true</append>
        </configuration>
        <executions>
          <execution>
            <id>mirror-orbit-recipes</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>mirror</goal>
            </goals>
            <configuration>
              <source>
                <repository>
                  <url>https://download.eclipse.org/tools/orbit/downloads/drops/R20220302172233/repository</url>
                  <layout>p2</layout>
                </repository>
              </source>
              <ius>
                <iu>
                  <id>org.apache.batik.ext</id>
                  <version>1.14.0.v20210324-0332</version>
                </iu>
                <iu>
                  <id>org.apache.batik.codec</id>
                  <version>1.14.0.v20210324-0332</version>
                </iu>
                <iu>
                  <id>org.apache.batik.script</id>
                  <version>1.14.0.v20210324-0332</version>
                </iu>
              </ius>
              <includePacked>false</includePacked>
              <followOnlyFilteredRequirements>true</followOnlyFilteredRequirements>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
